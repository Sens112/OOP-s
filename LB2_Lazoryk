public class Program
{
    static void Main()
    {
        Console.InputEncoding = Encoding.Unicode;
        Console.OutputEncoding = Encoding.Unicode;

        string[] lines = new string[4];
        Console.WriteLine("Input 4 lines: ");

        for (int i = 0; i < 4; i++)
        {
            Console.WriteLine($"Рядок {i + 1}: ");
            lines[i] = Console.ReadLine() ?? " ";
            lines[i] = lines[i].PadRight(32, ' ');
        }
        using (BinaryWriter bw = new BinaryWriter(File.Open("C:\\Users\\Acer\\source\\repos\\Lb2_n2_Lazorik\\file\\TextFile1.txt", FileMode.Create)))
        {
            for (int row = 0; row < 4; row++)
            {
                for (int pos = 0; pos < 32; pos++)
                {
                    char ch = lines[row][pos];
                    int ascii = (int)ch;

                    int encoded = 0;

                    encoded |= (row & 0b11);                 
                    encoded |= ((pos & 0b11111) << 2);       
                    encoded |= ((ascii & 0xFF) << 7);        

                    int bitCount = CountBits(encoded);
                    if (bitCount % 2 != 0)
                        encoded |= (1 << 15);               

                    bw.Write((ushort)encoded);
                }
            }
        }

        Console.WriteLine("\nШифрування завершено, результат записано у файл");
    }

    static int CountBits(int n)
    {
        int count = 0;
        while (n != 0)
        {
            count += n & 1;
            n >>= 1;
        }
        return count;
    }

}




 public class Decryptor
 {
     static void Main()
     {
         Console.InputEncoding = Encoding.Unicode;
         Console.OutputEncoding = Encoding.Unicode;

         string[] lines = new string[4];
         for (int i = 0; i < 4; i++) lines[i] = new string(' ', 32);

         using (BinaryReader br = new BinaryReader(File.Open("C:\\Users\\Acer\\source\\repos\\Lb2_n2_Lazorik\\file\\TextFile1.txt", FileMode.Open)))
         {
             while (br.BaseStream.Position < br.BaseStream.Length)
             {
                 ushort encoded = br.ReadUInt16();

                 int parityBit = (encoded >> 15) & 1;
                 int ascii = (encoded >> 7) & 0xFF;
                 int pos = (encoded >> 2) & 0b11111;
                 int row = encoded & 0b11;

                 char ch = (char)ascii;

                 int bitCount = CountBits(encoded & 0x7FFF);
                 if ((bitCount % 2) != parityBit)
                     Console.WriteLine($"Помилка парності у рядку {row + 1}, позиція {pos}");

                 char[] arr = lines[row].ToCharArray();
                 arr[pos] = ch;
                 lines[row] = new string(arr);
             }
         }

         Console.WriteLine("\nРозшифрований текст:\n");
         foreach (string line in lines)
             Console.WriteLine(line);

         File.WriteAllLines("C:\\Users\\Acer\\source\\repos\\Lb2_n2_Lazorik_Descriptor\\Decriptor.txt", lines, Encoding.UTF8);
         Console.WriteLine("\nРозшифрований текст записано у файл TextFile1.txt");
     }

     static int CountBits(int n)
     {
         int count = 0;
         while (n != 0)
         {
             count += n & 1;
             n >>= 1;
         }
         return count;
     }
 }



