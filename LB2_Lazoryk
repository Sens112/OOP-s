 class BitTranspose
 {
     static void Main()
     {
         Console.InputEncoding = Encoding.Unicode;
         Console.OutputEncoding = Encoding.Unicode;

         byte[] input = new byte[]
         {
         0x01, 0x02, 0x04, 0x08, 0x10, 0x20, 0x40, 0x80,   
         0xFF, 0x00, 0xAA, 0x55, 0xF0, 0x0F, 0x11, 0x22   
         };

         Console.WriteLine("Вхідні байти:");
         PrintBytes(input);

         if (input.Length % 8 != 0)
         {
             Console.WriteLine("Довжина вхідного масиву повинна бути кратною 8.");
             return;
         }

         byte[] encoded = EncodeBits(input);
         Console.WriteLine("\nЗакодовані байти:");
         PrintBytes(encoded);

         byte[] decoded = DecodeBits(encoded);
         Console.WriteLine("\nРозкодовані байти (повинні співпасти з вхідними):");
         PrintBytes(decoded);

         bool same = AreEqual(input, decoded);
         Console.WriteLine($"\nДекодування збіглося з оригіналом: {same}");

         File.WriteAllBytes("info.txt", encoded);
         Console.WriteLine("Закодовані байти записані у encoded.bin");
     }

     static byte[] EncodeBits(byte[] input)
     {
         byte[] output = new byte[input.Length];

         for (int i = 0; i < input.Length; i += 8)
         {
             for (int j = 0; j < 8; j++)
             {
                 for (int bit = 0; bit < 8; bit++)
                 {
                     int bitValue = (input[i + j] >> bit) & 1;
                     output[i + bit] |= (byte)(bitValue << j);
                 }
             }
         }

         return output;
     }

     static byte[] DecodeBits(byte[] input)
     {
         byte[] output = new byte[input.Length];

         for (int block = 0; block < input.Length; block += 8)
         {
             for (int i = 0; i < 8; i++) 
             {
                 byte value = 0;
                 for (int bit = 0; bit < 8; bit++)
                 {
                     int bitValue = (input[block + bit] >> i) & 1;
                     value |= (byte)(bitValue << bit);
                 }
                 output[block + i] = value;
             }
         }

         return output;
     }

     static void PrintBytes(byte[] arr)
     {
         for (int i = 0; i < arr.Length; i++)
         {
             Console.Write($"0x{arr[i]:X2} ");
             if ((i + 1) % 8 == 0) Console.WriteLine();
         }
         if (arr.Length % 8 != 0) Console.WriteLine();
     }

     static bool AreEqual(byte[] a, byte[] b)
     {
         if (a.Length != b.Length) return false;
         for (int i = 0; i < a.Length; i++)
             if (a[i] != b[i]) return false;
         return true;
     }
 }
