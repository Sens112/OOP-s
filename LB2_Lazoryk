public class Program
 {
     static void Main()
     {

         int a, b, c, d;

         Console.Write("Input a: ");
         a = int.Parse(Console.ReadLine());

         Console.Write("Input b: ");
         b = int.Parse(Console.ReadLine());

         Console.Write("Input c: ");
         c = int.Parse(Console.ReadLine());

         Console.Write("Input d: ");
         d = int.Parse(Console.ReadLine());

         int part1 = (a << 3) + (a << 2) + (a << 1) + a;

         int part2 = (b << 8) + (b << 5) + (b << 4) + (b << 3);

         int result1 = (part1 + part2) >> 6;

         int part3 = (c << 6) + (c << 5) + (c << 4) + (c << 3);

         int part4 = (d << 6) + (d << 5) + (d << 4) + (d << 3) + d;

         int result = result1 - part3 + part4;

         Console.WriteLine($"\nРезультат виразу = {result}");
     }
 }



