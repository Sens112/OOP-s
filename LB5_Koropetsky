public class B1
{
    protected int x;

    public B1()
    {
        x = 1;
        Console.WriteLine("Конструктор B1");
    }

    public virtual void Show()
    {
        Console.WriteLine($"B1: x = {x}");
    }
}

class B2 : B1
{
    protected int y;

    public B2()
    {
        y = 2;
        Console.WriteLine("Конструктор B2");
    }

    public override void Show()
    {
        base.Show();
        Console.WriteLine($"B2: y = {y}");
    }
}

class B3 : B1
{
    protected int z;

    public B3()
    {
        z = 3;
        Console.WriteLine("Конструктор B3");
    }

    public override void Show()
    {
        base.Show();
        Console.WriteLine($"B3: z = {z}");
    }
}

class D1 : B2
{
    protected int a;

    public D1()
    {
        a = 10;
        Console.WriteLine("Конструктор D1");
    }

    public override void Show()
    {
        base.Show();
        Console.WriteLine($"D1: a = {a}");
    }
}

class D2
{
    private D1 d1;
    private int b;

    public D2()
    {
        d1 = new D1();
        b = 20;
        Console.WriteLine("Конструктор D2");
    }

    public void Show()
    {
        d1.Show();
        Console.WriteLine($"D2: b = {b}");
    }
}

class D3 : B3
{
    protected int c;

    public D3()
    {
        c = 30;
        Console.WriteLine("Конструктор D3");
    }

    public override void Show()
    {
        base.Show();
        Console.WriteLine($"D3: c = {c}");
    }
}

class D4 : D3
{
    private D2 d2;
    private int d;

    public D4()
    {
        d2 = new D2();
        d = 40;
        Console.WriteLine("Конструктор D4");
    }

    public override void Show()
    {
        Console.WriteLine("\nВиведення з D4");
        d2.Show();
        base.Show();
        Console.WriteLine($"D4: d = {d}");
    }
}

public class Program
{
    static void Main()
    {
        Console.InputEncoding = Encoding.Unicode;
        Console.OutputEncoding = Encoding.Unicode;
        Console.WriteLine("Ієрархія успадкування\n");

        D4 obj = new D4();
        obj.Show();

      
    }
}
