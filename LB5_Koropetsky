 public class STUDENT
 {
     public string Name { get; set; }        
     public int Year { get; set; }        
     public double[] Bal { get; set; }       

     public STUDENT()
     {
         Bal = new double[4];
     }

     public void Input()
     {
         Console.Write("Введіть прізвище та ініціали: ");
         Name = Console.ReadLine();

         Console.Write("Введіть рік народження: ");
         Year = int.Parse(Console.ReadLine());

         Bal = new double[4];
         Console.WriteLine("Введіть 4 оцінки через пробіл:");
         string[] parts = Console.ReadLine().Split(' ');

         for (int i = 0; i < 4; i++)
             Bal[i] = double.Parse(parts[i]);
     }

     public double Average()
     {
         double sum = 0;
         foreach (double b in Bal)
             sum += b;
         return sum / Bal.Length;
     }

     public void Show()
     {
         Console.WriteLine($"{Name}, {Year} р.н. — середній бал: {Average():f2}");
     }
 }

 class Program
 {
     static void Main()
     {
         Console.InputEncoding = Encoding.Unicode;
         Console.OutputEncoding = Encoding.Unicode;

         Console.Write("Введіть кількість студентів N: ");
         int N = int.Parse(Console.ReadLine());

         STUDENT[] Group = new STUDENT[N];

         for (int i = 0; i < N; i++)
         {
             Console.WriteLine($"\nСтудент №{i + 1}:");
             Group[i] = new STUDENT();
             Group[i].Input();
         }

         Console.WriteLine("\nСтуденти із середнім балом > 4.0:\n");

         bool found = false;
         foreach (var s in Group)
         {
             if (s.Average() > 4.0)
             {
                 s.Show();
                 found = true;
             }
         }

         if (!found)
             Console.WriteLine("Немає студентів із середнім балом більше 4.0.");

    
     }
 }




