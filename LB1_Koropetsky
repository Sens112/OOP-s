public class Program
{
    static void Main()
    {
        {
            Console.InputEncoding = Encoding.Unicode;
            Console.OutputEncoding = Encoding.Unicode;

            Console.Write("Введіть кількість елементів масиву n: ");
            int n = int.Parse(Console.ReadLine());

            double[] arr = new double[n];

           
            Console.WriteLine("Введіть елементи масиву:");
            for (int i = 0; i < n; i++)
            {
                Console.Write($"arr[{i}] = ");
                arr[i] = double.Parse(Console.ReadLine());
            }

           
            double sumNeg = 0;
            foreach (double x in arr)
            {
                if (x < 0)
                    sumNeg += x;
            }

            int minIndex = 0, maxIndex = 0;
            for (int i = 1; i < n; i++)
            {
                if (arr[i] < arr[minIndex]) minIndex = i;
                if (arr[i] > arr[maxIndex]) maxIndex = i;
            }

            int start = Math.Min(minIndex, maxIndex) + 1;
            int end = Math.Max(minIndex, maxIndex) - 1;

            double product = 1;
            if (start <= end)
            {
                for (int i = start; i <= end; i++)
                    product *= arr[i];
            }
            else
            {
                product = 0; 
            }

            Array.Sort(arr);

            Console.WriteLine($"\nСума негативних елементів: {sumNeg}");
            Console.WriteLine($"Добуток елементів між мінімальним і максимальним: {product}");
            Console.WriteLine("Масив після сортування за зростанням:");
            foreach (double x in arr)
                Console.Write(x + " ");
            Console.WriteLine();
        }
    }



}
ZVD 2
 internal class Program
 {
     static void Main()
     {
         Console.InputEncoding = Encoding.UTF8;
         Console.OutputEncoding = Encoding.UTF8;

         Console.WriteLine("Сума цілих чисел: " + Add(5, 7));
       
         Add(2, 3, 1, 4);

         Console.WriteLine("НСК(6, 8, 12) = " + LCM(6, 8, 12));

     }
     static int Add(int a, int b) 
     {
         return a + b;
     }

     static void Add(double a1, double a2, double b1, double b2) 
     {
         double real = a1 + b1;
         double imag = a2 + b2;
         Console.WriteLine($"Sum complex nums: {real} + {imag} ");
     }

     static int NCD(int a, int b) 
     {
         while (b != 0)
         {
             int temp = b;
             b = a % b;
             a = temp;

         }
         return a;
     }

     static int LCM(int a, int b)
     {
         return a * b / NCD(a, b);
     }

     static int LCM(params int[] numbers)
     {
         if (numbers.Length == 0)
             return 0;

         int result = numbers[0];
         for (int i = 1; i < numbers.Length; i++)
         {
             result = LCM(result, numbers[i]);
         }
         return result;
     }
 }
